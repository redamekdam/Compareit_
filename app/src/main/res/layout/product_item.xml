<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/name_url"
        android:layout_width="232dp"
        android:layout_height="73dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="LOADING"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_url"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_url"
        android:layout_width="136dp"
        android:layout_height="141dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/store_url"
        android:layout_width="154dp"
        android:layout_height="18dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/price_url"
        app:layout_constraintEnd_toEndOf="@+id/name_url"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/name_url"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rate_url"
        android:layout_width="47dp"
        android:layout_height="19dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="116dp"
        android:text="TextView"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/name_url"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/name_url"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/price_url"
        android:layout_width="95dp"
        android:layout_height="27dp"
        android:text="TextView"
        android:textColor="@color/red"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/name_url"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toEndOf="@+id/image_url"
        app:layout_constraintTop_toBottomOf="@+id/name_url"
        app:layout_constraintVertical_bias="0.86" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRICE : "
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/price_url"
        app:layout_constraintEnd_toEndOf="@+id/price_url"
        app:layout_constraintStart_toStartOf="@+id/price_url"
        app:layout_constraintTop_toBottomOf="@+id/store_url" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FROM : "
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/name_url"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toEndOf="@+id/image_url"
        app:layout_constraintTop_toBottomOf="@+id/name_url"
        app:layout_constraintVertical_bias="0.521" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="RATING : "
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/store_url"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/store_url"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Fav"
        android:layout_width="117dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:background="@drawable/round"
        android:text="ADD TO FAVORIT ❤"
        android:textColor="@color/black"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/image_url"
        app:layout_constraintStart_toStartOf="@+id/image_url"
        app:layout_constraintTop_toBottomOf="@+id/image_url" />
</androidx.constraintlayout.widget.ConstraintLayout>